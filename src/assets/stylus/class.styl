@import "./variable.styl"
@svg border
  height: 2px
  @rect
    fill: var(--color, black)
    width: 100%
    height: 50%

@svg square
  @rect
    fill: var(--color, black)
    width: 100%
    height: 100%;
// 基础样式
*
  box-sizing: border-box
body,html
  font-family: 'Microsoft Yahei', 'Source Sans Pro', 'sans-serif'
  line-height: 1
  height:100%
  margin: 0
  // min-height: 641px
  // min-width: 961px
body
  line-height: 1
  -webkit-text-size-adjust: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
i
  font-style:normal
a
  color: #303133
  -webkit-backface-visibility: hidden
  text-decoration: none

li
  list-style: none

// 处理img标签在vw的兼容
img
  content: normal !important

// 公用样式
.fn10
  font-size:10px
.fn12
  font-size:12px
.fn14
  font-size:14px
.fn16
  font-size:16px
.fn18
  font-size:18px
.fn20
  font-size:20px
.fn22
  font-size:22px
.fn24
  font-size:24px
.fn26
  font-size:26px
.fn28
  font-size:28px
.fn30
  font-size:30px
.fn32
  font-size:32px
.cursor
  cursor:pointer
.fl
  float:left
.fr
  float:right
.like_a
  text-decoration: underline
  color:#409eff
.blue
    color color2
.red
    color color1
.bgLine
  margin-bottom: 16px
.clearfix::after
  content: ""
  display: block
  clear: both
  visibility: hidden
  height: 0
  font-size: 0

.border1px {
  border: 1px solid transparent;
  border-image: svg(border param(--color border-color1)) 2 2 stretch;
}
.borderb1px
  border-bottom: 1px solid transparent
  border-image: svg(border param(--color border-color1)) 2 2 stretch

.borderimage1px
  background: white svg(square param(--color border-color1))
// tt style
.min-line
    border-bottom 1px solid color3    
    -webkit-transform: scaleY(0.2);
    transform: scaleY(0.2);
.tt-tag
  border-radius: 100px
  padding 2px 10px
.fixed-center
  position fixed
  z-index 999
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
.text-center
  text-align: center
.flex
  display: flex
  .flexgrow
    flex-grow: 1
.placeholder::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color: color3
}
.placeholder:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color: color3
}
.placeholder::-moz-placeholder { /* Mozilla Firefox 19+ */
   color: color3
}
.placeholder::-ms-input-placeholder { /* Internet Explorer 10-11 */
   color: color3
}
